        <item name="fontPath">fonts/Dosis/Dosis-Regular.ttf</item>
    </style>

    <color name="primary_grey">#93B6B0</color>
    <color name="secondary_purple">#312F54</color>
    <color name="accent_pink">#93619C</color>
    <color name="yellow">#FCC82A</color>
    <color name="red">#EA4F4C</color>
    <color name="green">#56B789</color>
    <color name="purple">#93619B</color>
    <color name="blue">#4ABFDF</color>
    <color name="brown">#998D6B</color>
    <color name="white">#F9F8F4</color>
    <color name="black">#000000</color>

</resources>
